<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg);">
  <div class="container">
    <h1><strong><%= @list.name %></strong></h1>
    <%= link_to "Add a new movie", new_list_bookmark_path(@list), class: "btn btn-gradient" %>
    <%= link_to "Back to Playlist", lists_path, class: "btn btn-gradient" %>
  </div>
</div>
<div class="container">
  <% @list.movies.each do |movie| %>
    <div class="card-trip">
      <img src="<%= movie.poster_url %>">
      <div class="card-trip-infos">
        <div>
          <h2><%= movie.title %></h2>
          <p><%= movie.overview %></p>
        </div>
        <h2 class="card-trip-pricing"><%= movie.rating %></h2>
      </div>
    </div>
  <% end %>
</div>
