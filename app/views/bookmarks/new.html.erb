<div class="container mt-4">
  <div class="newsletter-subscribe">
    <div class="container">
      <div class="intro">
        <h2 class="text-center">Create your list</h2>
        <p class="text-center">The list with your favorite movies</p>
      </div>
        <%= simple_form_for [@list, @bookmark], html: { class: "form-inline"} do |f| %>
          <div class="form-group card-movie p-5"><%= f.association :movie, as: :radio_buttons, collection: Movie.order(:title) %></div>
          <div class="form-group"><%= f.input :comment, class:"form-control" %></div>
          <div class="form-group"><%= f.submit class:"btn-gradient mt-2" %></div>
        <% end %>
      </div>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
  </div>
</div>
